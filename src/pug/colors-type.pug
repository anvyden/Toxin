doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title UI-kit
  body
    include ~/pages/UI-kit/logo-colorless/logo-colorless.pug
    .colors-type-container
      .colors-container
        include ~/pages/UI-kit/colors-type/colors/colors.pug
        block primary-colors
        for i in colorsArray
          +colors(i.color, i.name, i.hex, i.last)
      .type-container
        include ~/pages/UI-kit/colors-type/type/type.pug
        block type 
        +type('h1', 'H1', 'type__h1-text', 'This one is the sub-section or widget title')
        +type('h2', 'H2', 'type__h2-text', 'Next one is the item title inside widgets')
        +type('h3', 'H3', 'type__h3-text', 'This is a label or CTA text')
        +type('body-text', 'Body', 'type__body-text', 'This is the body text which is used for most of the design, like paragraphs, lists, etc.', true)