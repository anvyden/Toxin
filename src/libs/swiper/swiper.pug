mixin slider(options)
  -
    const { pagination, navigation, classForAllImg, classForAllSlides, items } = options

    let sliderImgClass = 'slider__img'
    let slideClass = 'swiper-slide slider__slide'

    if (classForAllImg) {
      sliderImgClass += ` ${classForAllImg}`
    }

    if (classForAllSlides) {
      slideClass += ` ${classForAllSlides}`
    }
    
  .swiper.slider
    .swiper-wrapper.slider-wrapper
      each item in items
        -
          const { classForImg, classForSlide, src, alt } = item 

          if (classForImg) {
            sliderImgClass += ` ${classForImg}`
          }

          if (classForSlide) {
            slideClass += ` ${classForSlide}`
          }

        div(class=slideClass) 
          img(class=sliderImgClass src=src alt=alt)
    if (pagination)
      .swiper-pagination.slider__pagination
    if (navigation)
      .slider__button-wrapper.slider__button-prev-wrapper
        .swiper-button-prev.slider__button.slider__button-prev.material-icons='expand_more'
      .slider__button-wrapper.slider__button-next-wrapper
        .swiper-button-next.slider__button.slider__button-next.material-icons='expand_more'