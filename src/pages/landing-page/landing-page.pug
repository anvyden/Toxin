extends ~/components/pages/base/base
include ~/components/logo/logo
include ~/components/UI-kit/cards/find-room-card/find-room-card
include ~/components/header/header
include ~/components/footer/footer
include ~/components/copyright-bar/copyright-bar

block variables
  -
    const title = 'Toxin landing-page'
    const description = 'Toxin landing-page description'
    const keywords = 'Toxin landing-page keywords'
    const faviconPaths = {
      apple: 'static/favicon/active/apple-touch-icon.png',
      big: 'static/favicon/active/favicon-32x32.png',
      small: 'static/favicon/active/favicon-16x16.png',
      manifest: `static/favicon/active/site.webmanifest`,
      pinned: 'static/favicon/active/safari-pinned-tab.svg',
    }
    const pageClass = 'landing-page'
    const pageContainerClass = 'landing-page__container'

block content
  main.main
    section.main-section
      .main-section__container
        .main-section__find-room-card
          +findRoomCard({
            dropdownClassForJs: 'js-landing-page-datepicker-dropdown',
            firstInputClassForJs: 'js-landing-page-datepicker-1',
            secondInputClassForJs: 'js-landing-page-datepicker-2',
            guestsClassForJs: 'js-landing-page-guests',
            firstInputName: 'landingPageStartDate',
            secondInputName: 'landingPageFinishDate',
            guestsName: 'landingPageGuests'
          })
        .main-section__text-wrapper
          span.main-section__text='Лучшие номера для вашей работы, отдыха и просто вдохновения'


