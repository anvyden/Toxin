-
  let dateDropdownSettings = [
    {heading: 'date dropdown', text: 'ДД.ММ.ГГГГ'},
    {heading: 'date dropdown', text: '19.08.2019'}
  ]

mixin dateDropdown(dateDropdownSettings)
  .dropdown.dropdown--size-s.date-dropdown
    span.dropdown__heading=dateDropdownSettings.heading 
    button(type='button').input.input--focus.input--hover.dropdown__button=dateDropdownSettings.text
      .dropdown__arrow
        img(src='assets/img/dropdown-arrow.png')
