-
  let dropdownSettings = [
    {heading: 'dropdown', text: 'Сколько гостей'}
  ]

mixin dropdown(dropdownSettings)
  .dropdown
    span.dropdown__heading=dropdownSettings.heading 
    button(type='button').input.input--focus.input--hover.dropdown__button=dropdownSettings.text
      .dropdown__arrow
        img(src='assets/img/dropdown-arrow.png')
