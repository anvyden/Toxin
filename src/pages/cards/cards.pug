extends ~/layouts/UI-kit-layout/UI-kit-layout
include ~/components/logo/logo
include ~/components/text/text
include ~/components/find-room-card/find-room-card
include ~/components/sign-up-card/sign-up-card
include ~/components/booking-card/booking-card
include ~/components/sign-in-card/sign-in-card
include ~/components/datepicker/datepicker
include ~/components/room-card/room-card

block variables
  -
    const title = 'Toxin cards'
    const description = 'Toxin cards description'
    const keywords = 'Toxin cards keywords'
    const faviconPaths = {
      apple: 'static/favicon/inactive/apple-touch-icon.png',
      big: 'static/favicon/inactive/favicon-32x32.png',
      small: 'static/favicon/inactive/favicon-16x16.png',
      manifest: `static/favicon/inactive/site.webmanifest`,
      pinned: 'static/favicon/inactive/safari-pinned-tab.svg',
    }

block content
  .cards
    +logo({ active: false, posAbsolute: true })
    .cards__container
      .cards__wrapper
        .cards__find-room-card
          +findRoomCard({
            title: 'Найдём номера под ваши\u00A0пожелания',
            dateDropdownClassForJs: 'js-date-dropdown',
            guestsDropdownClassForJs: 'js-find-room-guests',
            formAction: './change-me.html'           
          })
        .cards__sing-up-card
          +signUpCard({
            title: 'Регистрация аккаунта',
            logInlink: './change-me.html',
            formAction: './change-me.html'
          })
      .cards__wrapper
        .cards__booking-card
          +bookingCard({
            luxe: true,
            dateDropdownClassForJs: 'js-booking-card-date-dropdown',
            guestsDropdownClassForJs: 'js-booking-card-guests',
            formAction: './change-me.html'
          })
        .cards__sing-in-card
          +signInCard({
            title: 'Войти',
            signUpLink: './change-me.html',
            formAction: './change-me.html'
          })
      .cards__wrapper
        .cards__datepicker
          +datepicker({ classForJs: 'js-datepicker' })
        .cards__room-cards
          .cards__room-card
            +roomCard({
              roomNumber: '888',
              roomPrice: '9 990₽',
              roomReviews: '145',
              luxe: true,
              ratingClassForJs: 'js-room-rating-1',
              roomImgs: [
                'room-888.jpg',
                'room-888.jpg',
                'room-888.jpg',
                'room-888.jpg',
              ]
            })
          .cards__room-card
            +roomCard({
              roomNumber: '840',
              roomPrice: '9 900₽',
              roomReviews: '65',
              ratingClassForJs: 'js-room-rating-2',
              roomImgs: [
                'room-840.jpg',
                'room-840.jpg',
                'room-840.jpg',
                'room-840.jpg',
              ]
            })
