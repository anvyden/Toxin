extends ~/templates/UI-kit/base-UI-kit/base-UI-kit
include ~/templates/UI-kit/logo/logo
include ~/templates/UI-kit/text/text
include ~/templates/UI-kit/cards/find-room-card/find-room-card
include ~/templates/UI-kit/cards/sign-up-card/sign-up-card
include ~/templates/UI-kit/cards/booking-card/booking-card
include ~/templates/UI-kit/cards/sign-in-card/sign-in-card
include ~/templates/UI-kit/cards/datepicker/datepicker
include ~/templates/UI-kit/cards/room-card/room-card

block variables
  -
    const title = 'Toxin cards'
    const description = 'Toxin cards description'
    const keywords = 'Toxin cards keywords'
    const faviconPaths = {
      apple: 'static/favicon/inactive/apple-touch-icon.png',
      big: 'static/favicon/inactive/favicon-32x32.png',
      small: 'static/favicon/inactive/favicon-16x16.png',
      manifest: `static/favicon/inactive/site.webmanifest`,
      pinned: 'static/favicon/inactive/safari-pinned-tab.svg',
    }

block content 
  .cards 
    +logo({ active: false })
    .cards-container
      .cards__wrapper
        .cards__find-room-card 
          +findRoomCard()
        .cards__sing-up-card
          +signUpCard()
      .cards__wrapper 
        .cards__booking-card 
          +bookingCard({ luxe: true })
        .cards__sing-in-card 
          +signInCard()
      .cards__wrapper 
        .cards__datepicker
          +datepicker({ classForJs: 'js-datepicker' })
        .cards__room-cards
          .cards__room-card
            +roomCard({ roomNumber: '888', roomPrice: '9 990₽', roomReviews: '145', roomImg: 'room-888', luxe: true, ratingClassForJs: 'js-room-rating-1' })
          .cards__room-card
            +roomCard({ roomNumber: '840', roomPrice: '9 990₽', roomReviews: '65', roomImg: 'room-840', ratingClassForJs: 'js-room-rating-2' })