-
  const title = 'Toxin error-page'
  const description = 'Toxin error-page description'
  const keywords = 'Toxin error-page keywords'
  const faviconPaths = {
    apple: 'static/favicon/active/apple-touch-icon.png',
    big: 'static/favicon/active/favicon-32x32.png',
    small: 'static/favicon/active/favicon-16x16.png',
    manifest: `static/favicon/active/site.webmanifest`,
    pinned: 'static/favicon/active/safari-pinned-tab.svg',
  }

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content=description)
    meta(name="keywords", content=keywords)
    meta(name="msapplication-TileColor", content="#00aba9")
    meta(name="msapplication-TileImage", content="/mstile-144x144.png")
    meta(name="theme-color", content="#ffffff")
    link(rel="apple-touch-icon", sizes="180x180", href=faviconPaths.apple)
    link(rel="icon", type="image/png", sizes="32x32", href=faviconPaths.big)
    link(rel="icon", type="image/png", sizes="16x16", href=faviconPaths.small)
    link(rel="manifest", href=faviconPaths.manifest)
    link(rel="mask-icon", href=faviconPaths.pinned, color="#5bbad5")
    title #{title}
  body
    main.error
      .error__container 
        .error__logo 
          a.error__logo-link(href='./landing.html')
            img&attributes({
              class: 'error__logo-img',
              src: require('@pages/error/img/logo.svg'),
              alt: 'logo',
            })
        .error__content    
          h1.error__number= '404'
          h2.error__heading= 'Page not found'
          a.error__link(href='./start.html')= 'Back to home'