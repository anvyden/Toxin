include ~/components/heading/heading
include ~/components/checkbox-list/checkbox-list
include ~/components/radio-buttons/radio-buttons
include ~/components/toggle-button/toggle-button
include ~/components/like-button/like-button
include ~/components/star-rating/star-rating

mixin controls()
  .controls
    .controls__container
      .controls__checkbox-buttons
        +checkbox-list({
          title: 'checkbox buttons',
          items: [
            {
              title: 'Можно курить',
              name: 'smoke'
            },
            {
              title: 'Можно с питомцами',
              name: 'pets',
              isChecked: true
            },
            {
              title: 'Можно пригласить гостей (до\u00A010\u00A0человек)',
              name: 'guests',
              isChecked: true
            }
          ],
        })
      .controls__radio-buttons
        .controls__heading
          +heading({
            title: 'radio buttons',
            titleType: 'h3',
            titleColor: 'dark-shade-100',
            titleBold: true,
            titleHasUpper: true
          })
        +radio-buttons({
          group: 'gender',
          items: [
            { text: 'Мужчина', value: 'man', isChecked: true},
            { text: 'Женщина', value: 'woman'}
          ],
        })
      .controls__toggle-buttons
        .controls__heading
          +heading({
            title: 'toggle',
            titleType: 'h3',
            titleColor: 'dark-shade-100',
            titleBold: true,
            titleHasUpper: true
          })
        .controls__toggle-buttons-wrapper
          .controls__toggle-button
            +toggle-button({
              text: 'Получать спецпредложения',
              name: 'offers1',
              isChecked: true
            })
          .controls__toggle-button
            +toggle-button({
              text: 'Получать спецпредложения',
              name: 'offers2'
            })
      .controls__like-buttons
        .controls__heading
          +heading({
            title: 'like button',
            titleType: 'h3',
            titleColor: 'dark-shade-100',
            titleBold: true,
            titleHasUpper: true
          })
        .controls__like-buttons-wrapper
          +like-button({ count: 2 })
          +like-button({ count: 12, isActive: true })
      .controls__rate-buttons
        .controls__heading
          +heading({
            title: 'rate button',
            titleType: 'h3',
            titleColor: 'dark-shade-100',
            titleBold: true,
            titleHasUpper: true
          })
        .controls__rate-buttons-wrapper
          +star-rating(4)
          +star-rating(5)
