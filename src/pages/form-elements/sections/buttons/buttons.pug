include ~/components/range-slider/range-slider
include ~/components/button/button
include ~/components/pagination/pagination

mixin buttons()
  .buttons
    .buttons__container
      .buttons__range-slider
        +rangeSlider({title: 'Range slider', classForJs: 'js-range-slider'})
      .buttons__buttons
        .buttons__heading
          +text({ text: 'buttons', type: 'h3', color: 'dark-shade-100', bold: true, hasUpper: true })
        .buttons__buttons-wrapper
          .buttons__buttons-group
            +button({ text: 'click me' })
            +button({ text: 'click me', disabled: true })
          .buttons__buttons-group
            +button({ text: 'click me', variant: 'border' })
            +button({ text: 'click me', variant: 'border', disabled: true })
          .buttons__buttons-group
            +button({ text: 'click me', variant: 'text' })
            +button({ text: 'click me', variant: 'text', disabled: true })
          .buttons__buttons-group
            +button({ text: 'перейти к оплате', variant: 'with-arrow' })
      .buttons__pagination
        .buttons__heading
          +text({ text: 'pagination', type: 'h3', color: 'dark-shade-100', bold: true, hasUpper: true })
        .buttons__pagination
          +pagination({ classForJs: 'js-pagination', smallSize: true })
