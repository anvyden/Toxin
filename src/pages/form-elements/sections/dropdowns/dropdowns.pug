include ~/components/dropdown/dropdown

mixin dropdowns()
  .dropdowns
    .dropdowns__container
      .dropdowns__services
        .dropdowns__dropdown-default
          +dropdown({
            text: 'dropdown',
            subtitle: 'default',
            withStraightBorders: true,
            value: '2 спальни, 2 кровати...'
          })
        .dropdowns__dropdown-expanded
          +dropdown({
            text: 'dropdown',
            subtitle: 'expanded',
            classForJs: 'js-dropdown-1',
            expanded: true,
            expandedVisible: true,
            expandedBlock: true,
            value: '2 спальни, 2 кровати...',
            placeholder: '2 спальни, 2 кровати...',
            items: [
              { text: 'спальни', counter: '2' },
              { text: 'кровати', counter: '2' },
              { text: 'ванные комнаты', counter: '0' },
            ]
          })
      .dropdowns__guests
        .dropdowns__dropdown-guests
          +dropdown({
            text: 'dropdown',
            classForJs: 'js-dropdown-guests-1',
            expanded: true,
            expandedVisible: true,
            expandedBlock: true,
            withButtons: true,
            value: 'Сколько гостей',
            placeholder: 'Сколько гостей',
            items: [
              { text: 'взрослые', counter: '0' },
              { text: 'дети', counter: '0' },
              { text: 'младенцы', counter: '0' },
            ]
          })
        .dropdowns__dropdown-guests-selected
          +dropdown({
            text: 'dropdown',
            classForJs: 'js-dropdown-guests-2',
            expanded: true,
            expandedVisible: true,
            expandedBlock: true,
            withButtons: true,
            value: '3 гостя',
            placeholder: 'Сколько гостей',
            items: [
              { text: 'взрослые', counter: '2' },
              { text: 'дети', counter: '1' },
              { text: 'младенцы', counter: '0' },
            ]
          })
