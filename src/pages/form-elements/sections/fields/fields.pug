include ~/components/text-field/text-field
include ~/components/dropdown/dropdown

mixin fields()
  section.fields
    .fields__container
      .fields__text-field
        +textField({
          hasTitle: true,
          title: 'text field',
          subtitle: 'default',
          type: 'text',
          name: 'textField',
          placeholder: 'Email'
        })
      .fields__text-field
        +textField({
          hasTitle: true,
          title: 'text field',
          subtitle: 'hover / focus',
          focused: true,
          type: 'text',
          name: 'textFieldFocused',
          placeholder: 'Email',
          value: 'This is pretty awesome'
        })
      .fields__dropdown
        +dropdown({ text: 'dropdown', value: 'Сколько гостей' })
      .fields__masked-text-field
        +textField({
          hasTitle: true,
          title: 'masked text field',
          type: 'text',
          name: 'date',
          placeholder: 'ДД.ММ.ГГГГ',
          classForJs: 'js-masked-text-field'
        })
      .fields__date-dropdown
        +dropdown({ text: 'date dropdown', value: 'ДД.ММ.ГГГГ', size: 'small' })
        +dropdown({ text: 'date dropdown', value: '19.08.2019', size: 'small' })
      .fields__filter-date-dropdown
        +dropdown({ text: 'filter date dropdown', value: '19 авг - 23 авг' })
      .fields__subscription-text-field
        +textField({
          hasTitle: true,
          title: 'subscription text field',
          type: 'text',
          name: 'subscription',
          placeholder: 'Email',
          withButton: true
        })
