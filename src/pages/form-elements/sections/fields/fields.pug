include ~/components/text-field/text-field
include ~/components/dropdown/dropdown

mixin fields()
  .fields
    .fields__container
      .fields__text-field
        +textField({
          type: 'text',
          hasTitle: true,
          title: 'text field',
          subtitle: 'default',
          name: 'textField',
          placeholder: 'Email',
          state: 'default'
        })
      .fields__text-field
        +textField({
          type: 'text',
          hasTitle: true,
          title: 'text field',
          subtitle: 'hover / focus',
          name: 'textFieldFocused',
          placeholder: 'Email',
          state: 'permamentFocused',
          value: 'This is pretty awesome'
        })
      .fields__dropdown
        +dropdown({ text: 'dropdown', value: 'Сколько гостей' })
      .fields__masked-text-field
        +textField({
          type: 'text',
          hasTitle: true,
          title: 'masked text field',
          name: 'date',
          placeholder: 'ДД.ММ.ГГГГ',
          classForJs: 'js-masked-text-field'
        })
      .fields__date-dropdown
        +dropdown({ text: 'date dropdown', value: 'ДД.ММ.ГГГГ', smallSize: true })
        +dropdown({ text: 'date dropdown', value: '19.08.2019', smallSize: true })
      .fields__filter-date-dropdown
        +dropdown({ text: 'filter date dropdown', value: '19 авг - 23 авг' })
      .fields__subscription-text-field
        +textField({
          type: 'text',
          hasTitle: true,
          title: 'subscription text field',
          name: 'subcription',
          placeholder: 'Email',
          withButton: true
        })
