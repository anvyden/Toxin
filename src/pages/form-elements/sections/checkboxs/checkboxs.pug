include ~/components/checkbox-list/checkbox-list
include ~/components/bullet-list/bullet-list

mixin checkboxs()
  .checkboxs
    .checkboxs__container
      .checkboxs__expandable-checkboxs
        .checkboxs__expandable-checkbox
          +checkboxList({ expandable: true, emptyCheckboxList: true, title: 'expandable checkbox list' })
        .checkboxs__expandable-checkbox
          +checkboxList({
            expandable: true,
            title: 'expandable checkbox list',
            isOpened: true,
            classForJs: 'js-expandable-checkbox',
            items: [
              { title: 'Завтрак', name: 'breakfast' },
              { title: 'Письменный стол', name: 'table', isChecked: true },
              { title: 'Стул для кормления', name: 'chair', isChecked: true },
              { title: 'Кроватка', name: 'bed', isChecked: true },
              { title: 'Телевизор', name: 'tv1' },
              { title: 'Шампунь', name: 'shampoo1' },
              { title: 'Телевизор', name: 'tv2' },
              { title: 'Шампунь', name: 'shampoo2' },
            ]
          })
      .checkboxs__rich-checkboxs
        +checkboxList({ title: 'rich checkbox buttons',
        items: [
          {
            isRich: true,
            title: 'Широкий коридор',
            description: `Ширина коридоров в номере
              не менее 91 см.`,
            name: 'wide-corridor'
          },
          {
            isRich: true,
            title: 'Помощник для инвалидов',
            description: `На 1 этаже вас встретит специалист
              и проводит до номера.`,
            color: 'dark-shade-75',
            name: 'assistant-for-disabled'
          },
        ]})
      .checkboxs__bullet-lists
        .checkboxs__bullet-lists-title
          +text({ text: 'bullet list', type: 'h3', color: 'dark-shade-100', bold: true, hasUpper: true })
        +bulletList({
          items: [
            { text: 'Нельзя с питомцами' },
            { text: 'Без вечеринок и мероприятий' },
            { text: `Время прибытия — после 13:00,
              а выезд до 12:00` },
          ]})
