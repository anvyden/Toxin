extends ~/layouts/UI-kit-layout/UI-kit-layout
include ~/components/colors/colors
include ~/components/types/types

block variables
  -
    const title = 'Toxin colors and type'
    const description = 'Toxin colors and type description'
    const keywords = 'Toxin colors and type keywords'
    const faviconPaths = {
      apple: 'static/favicon/inactive/apple-touch-icon.png',
      big: 'static/favicon/inactive/favicon-32x32.png',
      small: 'static/favicon/inactive/favicon-16x16.png',
      manifest: `static/favicon/inactive/site.webmanifest`,
      pinned: 'static/favicon/inactive/safari-pinned-tab.svg',
    }

block content
  main.colors-types
    .colors-types__container
      +colors([
        { color: 'dark-shade-100', name: 'Dark Shade 100%', hex: '#1F2041' },
        { color: 'dark-shade-75', name: 'Dark Shade 75%', hex: '#1F2041' },
        { color: 'dark-shade-50', name: 'Dark Shade 50%', hex: '#1F2041' },
        { color: 'dark-shade-25', name: 'Dark Shade 25%', hex: '#1F2041' },
        { color: 'dark-shade-5', name: 'Dark Shade 5%', hex: '#1F2041' },
        { color: 'purple', name: 'Purple', hex: '#BC9CFF' },
        { color: 'green', name: 'Green', hex: '#6FCF97' }
      ])
      +types([
        { type: 'h1', title: 'h1', text: 'This one is the sub-section or widget title', typeHeaderHasUpper: true },
        { type: 'h2', title: 'h2', text: 'Next one is the item title inside widgets', typeHeaderHasUpper: true },
        { type: 'h3', title: 'h3', text: 'This is a label or CTA text', typeHeaderHasUpper: true },
        { type: 'body', title: 'Body', text: 'This is the body text which is used for most of the design, like paragraphs, lists, etc.' }
      ])
