include ~/components/logo/logo
include ~/components/menu/menu
include ~/components/button/button

mixin header(options)
  -
    const { logIn, logoLink, firstMenuItemActive } = options

  header.header
    .header__container
      +logo({ active: true, link: logoLink })
      .header__menu-wrapper
        .header__menu
          +menu({
              items: [
                {
                  text: 'О нас',
                  link: 'change-me',
                  isActive: firstMenuItemActive,
                },
                {
                  text: 'Услуги',
                  subMenu: true,
                  subMenuItems: [
                    { text: 'Услуги', link: 'change-me' },
                    { text: 'Услуги', link: 'change-me' }
                  ]
                },
                {
                  text: 'Вакансии',
                  link: 'change-me',
                },
                {
                  text: 'Новости',
                  link: 'change-me',
                },
                {
                  text: 'Соглашения',
                  subMenu: true,
                  subMenuItems: [
                    { text: 'Соглашения', link: 'change-me' },
                    { text: 'Соглашения', link: 'change-me' }
                  ]
                }
              ]
            })
        if (!logIn)
          .header__authorization
            +button({ text: 'Войти', variant: 'fill-white', color: 'purple', size: 'medium', link: './sign-in.html' })
            +button({ text: 'Зарегистрироваться', color: 'white', size: 'medium', link: './registration.html' })
        else
          .header__authorization-complete
            span.header__user='Юлий Цезарь'
    .header__burger-container
      div(class='header__burger-button js-header-burger-button', tabindex='0')
        .header__burger-line.js-header-burger-line
        .header__burger-line.js-header-burger-line
        .header__burger-line.js-header-burger-line
        .header__burger-line.js-header-burger-line
      .header__burger-menu-wrapper.js-header-burger-menu-wrapper
        .header__burger-menu
          +menu({
              items: [
                {
                  linkText: 'О нас',
                  link: 'change-me',
                  isActive: true,
                },
                {
                  linkText: 'Услуги',
                  subMenu: true,
                  subItems: [
                    { subLinkText: 'Услуги', subLink: 'change-me' },
                    { subLinkText: 'Услуги', subLink: 'change-me' }
                  ]
                },
                {
                  linkText: 'Вакансии',
                  link: 'change-me',
                },
                {
                  linkText: 'Новости',
                  link: 'change-me',
                },
                {
                  linkText: 'Соглашения',
                  subMenu: true,
                  subItems: [
                    { subLinkText: 'Соглашения', subLink: 'change-me' },
                    { subLinkText: 'Соглашения', subLink: 'change-me' }
                  ]
                }
              ]
            })
        if (!logIn)
          .header__burger-authorization
            +button({ text: 'Войти', isLink: true, variant: 'border', size: 'medium', link: './sign-in.html' })
            +button({ text: 'Зарегистрироваться', isLink: true, size: 'medium', link: './registration.html' })
        else
          .header__burger-authorization-complete
            span.header__user='Юлий Цезарь'



