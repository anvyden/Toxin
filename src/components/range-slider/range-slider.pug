include ~/components/heading/heading

mixin range-slider({options = {}, props = {}} = {})
  -
    const { title='', description='' } = options

  div(class=['range-slider', 'js-range-slider'], data-props=props)
    .range-slider__heading
      +heading({
        title: title,
        titleType: 'h3',
        titleColor: 'dark-shade-100',
        titleBold: true,
        titleHasUpper: true
      })
      input&attributes({
        class: "range-slider__value js-range-slider__value",
        type: "text",
        readonly: "readonly",
        name: 'rangeSliderValue',
        tabindex: -1,
      })
    .range-slider__wrapper
      .range-slider__slider.js-range-slider__slider
    if description
      span.range-slider__description=description
