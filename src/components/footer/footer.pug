include ~/components/logo/logo
include ~/components/text/text
include ~/components/text-field/text-field
include ~/components/menu/menu
include ~/components/copyright-bar/copyright-bar

mixin footer({ logoLink } = {})
  footer.footer
    .footer__widgets
      .footer__widgets-container
        .footer__company
          +logo({ active: true, link: logoLink })
          p.footer__company-presentation='Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»'
        .footer__menu
          +text({ text: 'Навигация', type: 'h3', color: 'dark-shade-100', bold: true, hasUpper: true })
          +menu({ 
            options: {
              column: true
            },
            items: [
              { text: 'О нас', link: './error-page.html' },
              { text: 'Новости', link: './error-page.html' },
              { text: 'Служба поддержки', link: './error-page.html' },
              { text: 'Услуги', link: './error-page.html' },
            ]
          })
        .footer__menu
          +text({ text: 'О нас', type: 'h3', color: 'dark-shade-100', bold: true, hasUpper: true })
          +menu({ 
            options: {
              column: true
            },
            items: [
              { text: 'О сервисе', link: './error-page.html' },
              { text: 'Наша команда', link: './error-page.html' },
              { text: 'Вакансии', link: './error-page.html' },
              { text: 'Инвесторы', link: './error-page.html' },
            ]
          })
        .footer__menu
          +text({ text: 'Служба поддержки', type: 'h3', color: 'dark-shade-100', bold: true, hasUpper: true })
          +menu({
            options: {
              column: true
            },
            items: [
              { text: 'Соглашения', link: './error-page.html' },
              { text: 'Сообщества', link: './error-page.html' },
              { text: 'Связь с нами', link: './error-page.html' },
            ]
          })
        .footer__subscription
          +text({ text: 'Подписка', type: 'h3', color: 'dark-shade-100', bold: true, hasUpper: true })
          p.footer__subscription-text='Получайте специальные предложения и новости сервиса'
          form.footer__subscription-form
            +text-field({
              type: 'email',
              placeholder: 'Email',
              name: 'email',
              isSubscribe: true,
              autocomplete: 'on',
            })
    .footer__copyright-bar
      +copyright-bar({
        socialItems: [
          { fontAwesomeIconClass: 'fa-twitter', link: './error-page.html' },
          { fontAwesomeIconClass: 'fa-facebook-square', link: './error-page.html' },
          { fontAwesomeIconClass: 'fa-instagram', link: './error-page.html' },
        ]
      })