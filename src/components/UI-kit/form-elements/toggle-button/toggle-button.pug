mixin toggleButton(options)
  -
    const { text, name, value, isChecked } = options 

    let toggleInputClass = 'toggle-button__input'
    let toggleLabelClass = 'toggle-button__label'
    
  .toggle-button
    label(class=toggleLabelClass)
      input(class=toggleInputClass, type='checkbox', name=name, value=value, checked=isChecked)
      span.toggle-button__text=text