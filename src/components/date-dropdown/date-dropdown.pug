include ~/components/text-field/text-field

mixin date-dropdown(options={})
  -
    const {
      type,
      dataType,
      dataTypeEnd,
      placeholder,
      name='date',
      nameEnd,
      hasArrow,
      autocomplete,
      isReadonly,
      isLowerCase,
      hasTwoInputs=false,
      title,
      titleEnd,
      classForJs
    } = options

  if hasTwoInputs
    .date-dropdown(class=classForJs)
      .date-dropdown__wrapper 
        .date-dropdown__start 
          +text-field({
            hasTitle: true,
            title,
            type,
            dataType,
            placeholder,
            name,
            hasArrow,
            autocomplete,
            isReadonly,
          })
        .date-dropdown__end 
          +text-field({
            hasTitle: true,
            title: titleEnd,
            type,
            dataType: dataTypeEnd,
            placeholder,
            name: nameEnd,
            hasArrow,
            autocomplete,
            isReadonly,
          })
  else
    .date-dropdown(class=classForJs)
      +text-field({
        hasTitle: true,
        title,
        type,
        dataType,
        placeholder,
        name,
        hasArrow,
        autocomplete,
        isReadonly,
        isLowerCase
      })