include ~/templates/UI-kit/logo/logo
include ~/templates/UI-kit/headers-footers/menu/menu
include ~/templates/UI-kit/form-elements/button/button

mixin headerNotLogged({ logIn })
  header.header 
    .header__default-container
      +logo({ active: true })
      .header__default-menu-wrapper
        .header__default-menu
          +menu({
              items: [
                {
                  linkText: 'О нас',
                  isActive: true,
                },
                {
                  linkText: 'Услуги',
                  subMenu: true,
                  subItems: [
                    { subLinkText: 'Услуги' },
                    { subLinkText: 'Услуги' }
                  ]
                },
                {
                  linkText: 'Вакансии',
                },
                {
                  linkText: 'Новости',
                },
                {
                  linkText: 'Соглашения',
                  subMenu: true,
                  subItems: [
                    { subLinkText: 'Соглашения' },
                    { subLinkText: 'Соглашения' }
                  ]
                }
              ]
            })
        if (!logIn)
          .header__default-authorization
            +button({ text: 'Войти', isLink: true, withBorder: true, widthSize: 'small', smallHeight: true })
            +button({ text: 'Зарегистрироваться', isLink: true, withBackground: true, widthSize: 'medium', smallHeight: true })
        else
          .header__authorization-complete
            span.header__user='Юлий Цезарь'
    .header__burger-container
      .header__burger-button 
        .header__burger-line
        .header__burger-line
        .header__burger-line
        .header__burger-line
      .header__burger-menu-wrapper
        .header__burger-menu
          +menu({
              items: [
                {
                  linkText: 'О нас',
                  isActive: true,
                },
                {
                  linkText: 'Услуги',
                  subMenu: true,
                  subItems: [
                    { subLinkText: 'Услуги' },
                    { subLinkText: 'Услуги' }
                  ]
                },
                {
                  linkText: 'Вакансии',
                },
                {
                  linkText: 'Новости',
                },
                {
                  linkText: 'Соглашения',
                  subMenu: true,
                  subItems: [
                    { subLinkText: 'Соглашения' },
                    { subLinkText: 'Соглашения' }
                  ]
                }
              ]
            })
        .header__burger-authorization
          +button({ text: 'Войти', isLink: true, withBorder: true, widthSize: 'small', smallHeight: true })
          +button({ text: 'Зарегистрироваться', isLink: true, withBackground: true, widthSize: 'medium', smallHeight: true })
          
          

