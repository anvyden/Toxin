include ~/templates/UI-kit/logo/logo
include ~/templates/UI-kit/headers-footers/menu/menu

mixin headerLoggedIn()
  header.header-logged-in 
    .header-logged-in__container
      +logo({ active: true })
      .header-logged-in__menu-wrapper
        .header-not-logged__menu
          +menu({
            items: [
              {
                linkText: 'О нас',
                isActive: true,
              },
              {
                linkText: 'Услуги',
                subMenu: true,
                subItems: [
                  { subLinkText: 'Услуги' },
                  { subLinkText: 'Услуги' }
                ]
              },
              {
                linkText: 'Вакансии',
              },
              {
                linkText: 'Новости',
              },
              {
                linkText: 'Соглашения',
                subMenu: true,
                subItems: [
                  { subLinkText: 'Соглашения' },
                  { subLinkText: 'Соглашения' }
                ]
              }
            ]
          })
        .header-logged-in__authorization-complete
          span.header-logged-in__user='Юлий Цезарь'

