mixin dropdown({ text, withSmallSize, classForJs })
  -
    let dropdownClass = 'dropdown'
    let dropdownInputClass = 'dropdown__input' + ' dropdown__input--focused' + ' dropdown__input--hovered'
    let dropdownButtonClass = 'dropdown__button'

    if (withSmallSize) {
      dropdownClass += ' dropdown--size-small'
    }
  
  div(class=dropdownClass)
    .dropdown__title
      block 
    .dropdown__wrap
      input(class=dropdownInputClass, value=text, readonly)
      button(class=dropdownButtonClass, type='button')='expand_more'
