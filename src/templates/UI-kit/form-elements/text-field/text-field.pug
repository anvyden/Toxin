mixin textField({ type, placeholder, name, value, isFocused, isHovered, withButton, classForJs, withSmallSize })
  -
    let inputClass = 'text-field__input'

    if (isFocused) {
      inputClass += ' text-field__input--focused'
    }

    if (isHovered) {
      inputClass += ' text-field__input--hovered'
    }

    if (classForJs) {
      inputClass += classForJs
    }

  .text-field
    input(class=inputClass, type=type, name=name, placeholder=placeholder, value=value)
    if (withButton)
      button(type='submit').text-field__button='arrow_forward'