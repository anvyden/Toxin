include ~/templates/UI-kit/text/text
include ~/templates/UI-kit/form-elements/dropdown/dropdown
include ~/templates/UI-kit/form-elements/button/button

mixin bookingCard({ luxe, dropdownClassForJs, firstInputClassForJs, secondInputClassForJs, guestsClassForJs, firstInputName, secondInputName, guestsName, formAction, formMethod })
  .booking-card 
    .booking-card__container 
      form(class='booking-card__form', action=formAction, method=formMethod)
        .booking-card__room-info
          .booking-card__room-number-info
            h1(class='booking-card__room-number').
              #[span.booking-card__room-number-symbol № ]
              #[span.booking-card__room-number-value 888]
            if (luxe)
              +text({ text: 'люкс', type: 'h3', color: 'purple', bold: true, hasUpper: true })
          .booking-card__room-price-info
            p(class='booking-card__room-price').
              #[span.booking-card__room-price-value 9 990₽]
              #[span.booking-card__room-price-day в сутки]
        .booking-card__date-picker 
          +dropdown({ text: 'прибытие', placeholder: 'ДД.ММ.ГГГГ', name: firstInputName, value: '19.08.2019', withSmallSize: true, classForJs: dropdownClassForJs, inputClassForJs: firstInputClassForJs })
          +dropdown({ text: 'выезд', placeholder: 'ДД.ММ.ГГГГ', name: secondInputName, value: '23.08.2019', withSmallSize: true, classForJs: dropdownClassForJs, inputClassForJs: secondInputClassForJs })
        .booking-card__dropdown-guests 
          +dropdown({ text: 'гости', expanded: true, withButtons: true, placeholder: 'Сколько гостей', name: guestsName, value: '3 гостя', classForJs: guestsClassForJs,
          items: [
            { itemName: 'взрослые', itemCounter: '2' },
            { itemName: 'дети', itemCounter: '1' },
            { itemName: 'младенцы', itemCounter: '0' },
          ]})
        .booking-card__calculate-price 
          .booking-card__calculate-price-item
            p.booking-card__days-text='9 990₽ х 4 суток'
            p.booking-card__days-sum='39 960₽'
          .booking-card__calculate-price-item 
            p.booking-card__services-text.booking-card__text--with-icon='Сбор за услуги: скидка 2 179₽'
            p.booking-card__services-sum='0₽'
          .booking-card__calculate-price-item
            p.booking-card__additional-services-text.booking-card__text--with-icon='Сбор за дополнительные услуги'
            p.booking-card__additional-services-sum='300₽'
        .booking-card__total-price 
          h2.booking-card__total-text='Итого'
          .booking-card__total-separator 
          h2.booking-card__total-sum='38 081₽'
        .booking-card__booking-button 
          +button({ text: 'забронировать', type: 'submit', withArrow: true })